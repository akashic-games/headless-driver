{
  "name": "@akashic/headless-driver-runner-v3",
  "version": "1.1.25",
  "description": "A runner module for contents using Akashic Engine v3",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json && npm run formatter",
    "formatter": "prettier --write \"src/**/*.ts\" --config ../prettier.config.js",
    "test": "npm run lint",
    "lint": "tslint -c ../tslint.json src/**/*.ts -p tsconfig.json -e \"**/node_modules/**\""
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib"
  ],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@akashic/engine-files": "3.0.0-beta.7",
    "@akashic/headless-driver-runner": "1.1.25",
    "@akashic/pdi-common-impl": "0.0.4"
  },
  "devDependencies": {
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "tslint": "6.1.3",
    "typescript": "3.9.7"
  }
}
