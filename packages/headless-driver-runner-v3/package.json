{
  "name": "@akashic/headless-driver-runner-v3",
  "version": "1.7.3",
  "description": "A runner module for contents using Akashic Engine v3",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json && npm run formatter",
    "formatter": "prettier --write \"src/**/*.ts\" --config ../prettier.config.js",
    "test": "npm run run:jest && npm run lint",
    "run:jest": "rimraf ./src/__tests__/out/**/*.png && jest",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib"
  ],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@akashic/engine-files": "3.0.16",
    "@akashic/headless-driver-runner": "1.7.1",
    "@akashic/pdi-common-impl": "0.0.4"
  },
  "devDependencies": {
    "@akashic/eslint-config": "0.1.2",
    "@types/jest": "26.0.20",
    "@types/pixelmatch": "5.2.2",
    "@types/pngjs": "6.0.0",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "canvas": "2.7.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.2",
    "image-size": "0.9.5",
    "jest": "26.6.3",
    "pixelmatch": "5.2.1",
    "pngjs": "6.0.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "typescript": "4.2.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "<rootDir>/src/__tests__/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
