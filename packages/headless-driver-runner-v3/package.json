{
  "name": "@akashic/headless-driver-runner-v3",
  "version": "1.11.22",
  "description": "A runner module for contents using Akashic Engine v3",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json && npm run formatter",
    "formatter": "prettier --write \"src/**/*.ts\" --config ../prettier.config.js",
    "test": "npm run run:jest && npm run lint",
    "run:jest": "rimraf ./src/__tests__/out/**/*.png && jest",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib"
  ],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@akashic/engine-files": "3.1.4",
    "@akashic/headless-driver-runner": "1.11.22",
    "@akashic/pdi-common-impl": "0.2.0"
  },
  "devDependencies": {
    "@akashic/eslint-config": "1.0.0",
    "@types/jest": "27.4.0",
    "@types/pixelmatch": "5.2.4",
    "@types/pngjs": "6.0.1",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "canvas": "2.8.0",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.7.0",
    "image-size": "1.0.1",
    "jest": "27.4.7",
    "pixelmatch": "5.2.1",
    "pngjs": "6.0.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "<rootDir>/src/__tests__/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
