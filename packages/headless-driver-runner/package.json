{
  "name": "@akashic/headless-driver-runner",
  "version": "0.4.0",
  "description": "A runner module for contents using Akashic Engine",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json && npm run formatter",
    "formatter": "prettier --write \"src/**/*.ts\" --config ../prettier.config.js",
    "test": "npm run build && npm run lint",
    "lint": "tslint -c ../tslint.json src/**/*.ts -p tsconfig.json -e \"**/node_modules/**\""
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib"
  ],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@akashic/amflow": "0.2.2",
    "@akashic/trigger": "0.1.5",
    "node-fetch": "2.5.0"
  },
  "devDependencies": {
    "@types/node-fetch": "2.3.3",
    "prettier": "^1.16.0",
    "rimraf": "^2.6.3",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
