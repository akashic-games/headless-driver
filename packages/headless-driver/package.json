{
  "name": "@akashic/headless-driver",
  "version": "1.11.19",
  "description": "A library to execute contents using Akashic Engine headlessly",
  "main": "lib/index.js",
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json && npm run formatter",
    "formatter": "prettier --write \"src/**/*.ts\" --config ../prettier.config.js",
    "test": "npm run run:jest && npm run lint",
    "run:jest": "jest",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@akashic/amflow": "~3.1.0",
    "@akashic/headless-driver-runner": "1.11.19",
    "@akashic/headless-driver-runner-v1": "1.11.19",
    "@akashic/headless-driver-runner-v2": "1.11.19",
    "@akashic/headless-driver-runner-v3": "1.11.19",
    "@akashic/playlog": "~3.1.0",
    "@akashic/trigger": "~1.0.0",
    "js-sha256": "0.9.0",
    "lodash.clonedeep": "4.5.0",
    "node-fetch": "2.6.6",
    "vm2": "3.9.5"
  },
  "devDependencies": {
    "@akashic/engine-files": "3.1.4",
    "@akashic/eslint-config": "1.0.0",
    "@types/get-port": "4.0.1",
    "@types/jest": "27.4.0",
    "@types/lodash.clonedeep": "4.5.6",
    "@types/node": "14.18.4",
    "@types/node-fetch": "2.5.12",
    "@types/pixelmatch": "5.2.4",
    "@types/pngjs": "6.0.1",
    "@typescript-eslint/eslint-plugin": "5.8.1",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.3.4",
    "get-port": "5.1.1",
    "jest": "27.4.5",
    "pixelmatch": "5.2.1",
    "pngjs": "6.0.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "serve-handler": "6.1.3",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  },
  "optionalDependencies": {
    "canvas": "2.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "globalSetup": "<rootDir>/src/__tests__/setup.ts",
    "globalTeardown": "<rootDir>/src/__tests__/teardown.ts"
  }
}
