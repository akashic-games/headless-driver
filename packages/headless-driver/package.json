{
  "name": "@akashic/headless-driver",
  "version": "1.2.16",
  "description": "A library to execute contents using Akashic Engine headlessly",
  "main": "lib/index.js",
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json && npm run formatter",
    "formatter": "prettier --write \"src/**/*.ts\" --config ../prettier.config.js",
    "test": "npm run run:jest && npm run lint",
    "run:jest": "jest",
    "lint": "tslint -c ../tslint.json -p tsconfig.json -e \"**/node_modules/**\""
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@akashic/amflow": "~3.0.0",
    "@akashic/headless-driver-runner": "1.2.9",
    "@akashic/headless-driver-runner-v1": "1.2.9",
    "@akashic/headless-driver-runner-v2": "1.2.9",
    "@akashic/headless-driver-runner-v3": "1.2.11",
    "@akashic/playlog": "~3.1.0",
    "@akashic/trigger": "~1.0.0",
    "js-sha256": "0.9.0",
    "lodash.clonedeep": "4.5.0",
    "node-fetch": "2.6.1",
    "vm2": "3.9.1"
  },
  "devDependencies": {
    "@types/get-port": "4.0.1",
    "@types/jest": "26.0.14",
    "@types/lodash.clonedeep": "4.5.6",
    "@types/node": "13.13.26",
    "@types/node-fetch": "2.5.7",
    "get-port": "5.1.1",
    "jest": "26.6.1",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "serve-handler": "6.1.3",
    "ts-jest": "26.4.1",
    "tslint": "6.1.3",
    "typescript": "3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/__tests__/**/*Spec.ts"
    ],
    "globalSetup": "<rootDir>/src/__tests__/setup.ts",
    "globalTeardown": "<rootDir>/src/__tests__/teardown.ts"
  }
}
