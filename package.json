{
  "name": "@akashic/headless-driver",
  "version": "2.0.0",
  "description": "A library to execute contents using Akashic Engine headlessly",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/headless-driver.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && npm run format",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "run-s test:*",
    "test:jest": "jest",
    "test:lint": "eslint \"src/**/*.ts\" --fix",
    "test:lint-md": "remark . --frail --no-stdout --quiet --rc-path"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@akashic/amflow": "~3.0.0",
    "@akashic/headless-driver-runner": "1.7.1",
    "@akashic/headless-driver-runner-v1": "1.7.1",
    "@akashic/headless-driver-runner-v2": "1.7.3",
    "@akashic/headless-driver-runner-v3": "1.7.3",
    "@akashic/pdi-common-impl": "0.0.4",
    "@akashic/playlog": "~3.1.0",
    "@akashic/trigger": "~1.0.0",
    "aev1": "npm:@akashic/engine-files@1.1.16",
    "aev2": "npm:@akashic/engine-files@2.1.54",
    "aev3": "npm:@akashic/engine-files@3.0.16",
    "js-sha256": "0.9.0",
    "lodash.clonedeep": "4.5.0",
    "node-fetch": "2.6.1",
    "vm2": "3.9.1"
  },
  "devDependencies": {
    "@akashic/engine-files": "3.0.15",
    "@akashic/eslint-config": "0.1.2",
    "@types/get-port": "4.0.1",
    "@types/jest": "26.0.20",
    "@types/lodash.clonedeep": "4.5.6",
    "@types/node": "13.13.46",
    "@types/node-fetch": "2.5.8",
    "@types/pixelmatch": "5.2.2",
    "@types/pngjs": "6.0.0",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "canvas": "2.7.0",
    "cross-env": "7.0.3",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.2",
    "get-port": "5.1.1",
    "image-size": "0.9.5",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lerna-changelog": "1.0.1",
    "npm-run-all": "4.1.5",
    "pixelmatch": "5.2.1",
    "pngjs": "6.0.0",
    "prettier": "2.2.1",
    "remark-cli": "9.0.0",
    "remark-lint": "8.0.0",
    "remark-preset-lint-markdown-style-guide": "4.0.0",
    "rimraf": "3.0.2",
    "serve-handler": "6.1.3",
    "ts-jest": "26.5.3",
    "typescript": "4.2.3"
  },
  "optionalDependencies": {
    "canvas": "2.7.0"
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 4,
    "useTabs": true,
    "trailingComma": "none"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "globalSetup": "<rootDir>/src/__tests__/setup.ts",
    "globalTeardown": "<rootDir>/src/__tests__/teardown.ts"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-markdown-style-guide"
    ]
  }
}
